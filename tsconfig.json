{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es2016",
      "es7",
      "es2017",
      "dom"
    ],
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./build/types",
    "declarationMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": false,
    "outDir": "./build/types",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
